#include <unistd.h>
#include <fcntl.h>
#include <sys/mman.h>
#include <sys/stat.h>
#include <sys/types.h>
#include <string.h>
#include <time.h>
#include <sys/wait.h>
#include <errno.h>
#include <semaphore.h>
#define SHM_NAME "/cinta_transportadora"
#define TAM_MEM sizeof(char) * 2
#define SEM_P "/SEMP"
#define SEM_R2 "/SEMR2"
#define PRODUCTO "AC"
#define ROBOT "Robot 2"
int main() {
    // Apertura y verificación de semáforos
  sem_t *semp = sem_open(SEM_P, 0);
  if (semp == SEM_FAILED) {
      perror("Error abriendo semp");
      exit(1);
    }

    sem_t *semr2 = sem_open(SEM_R2, 0);
    while ((semr2 = sem_open("/SEMR2", 0)) == SEM_FAILED) {
      perror("Esperando a que exista semr2...");
      sleep(1);
 }


    // Apertura de memoria compartida
    int shm_fd = shm_open(SHM_NAME, O_RDWR, 0666);
    if (shm_fd == -1) {
        perror("Error abriendo memoria compartida");
        exit(1);
    }

    char *cinta = mmap(NULL, TAM_MEM, PROT_READ | PROT_WRITE, MAP_SHARED, shm_fd, 0);
    if (cinta == MAP_FAILED) {
        perror("Error mapeando memoria compartida");
        exit(1);
    }

    int cp = 0;
    while (1) {
      printf("Robot2 se despierta\n");
      sem_wait(semr2);  // Espera su turno

      if (strncmp(cinta, "ZZ", 2) == 0) break;

      if (strncmp(cinta, PRODUCTO, 2) == 0) {
        printf(ROBOT " empaqueta productos " PRODUCTO "\n");
        strncpy(cinta, "--", 2);
        cp++;
	sem_post(semp);  // Libera al productor
        }
      usleep(10000);
    }

    printf("Robot 2 empaquetó un total de %d productos\n", cp);
    return 0;
}



